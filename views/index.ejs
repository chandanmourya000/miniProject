        /* Additional styles to match user dashboard */
        :root {
            --primary-gradient: linear-gradient(to right, #990000, #0073e6);
            --section-bg: #ffffff;
            --text-primary: #333;
            --text-secondary: #555;
            --border-radius: 10px;
            --box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            --accent-color: #0073e6;
            --secondary-accent: #990000;
            --success-color: #28a745;
        }
        
        body {
            background-color: #f5f7fa;
        }
        
        .hero-section {
            background: var(--primary-gradient);
            color: white;
            padding: 40px;
            border-radius: var(--border-radius);
            margin: 20px auto;
            position: relative;
            overflow: hidden;
            box-shadow: var(--box-shadow);
            max-width: 1200px;
        }
        
        .hero-section h1 {
            font-size: 32px;
            margin-bottom: 10px;
        }
        
        .hero-section p {
            font-size: 18px;
            opacity: 0.9;
            max-width: 80%;
            color: white;
        }
        
        .hero-section::after {
            content: '';
            position: absolute;
            top: -50px;
            right: -50px;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }
        
        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            margin: 30px auto;
            max-width: 1200px;
            padding: 0 20px;
        }
        
        .feature-card {
            background: var(--section-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        }
        
        .feature-card h3 {
            color: var(--text-primary);
            font-size: 22px;
            margin-top: 0;
            margin-bottom: 15px;
            position: relative;
            padding-bottom: 10px;
        }
        
        .feature-card h3::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 40px;
            height: 3px;
            background: var(--primary-gradient);
        }
        
        .feature-card p {
            color: var(--text-secondary);
            margin-bottom: 20px;
            line-height: 1.6;
        }
        
        .feature-card .icon {
            font-size: 48px;
            margin-bottom: 15px;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .card-action {
            display: inline-block;
            padding: 10px 20px;
            background: var(--primary-gradient);
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 500;
            transition: transform 0.2s ease;
        }
        
        .card-action:hover {
            transform: scale(1.05);
        }
        
        #abc {
            background: var(--section-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            margin: 30px auto;
            max-width: 900px;
        }
        
        #abc h2 {
            color: var(--text-primary);
            border-bottom: 3px solid var(--accent-color);
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        
        #abc p {
            line-height: 1.6;
            color: var(--text-secondary);
        }
        
        .map-section {
            background: var(--section-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 30px;
            margin: 30px auto;
            max-width: 1200px;
        }
        
        .map-section h2 {
            color: var(--text-primary);
            border-bottom: 3px solid var(--accent-color);
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        
        /* Statistics section */
        .stats-section {
            display: flex;
            justify-content: space-between;
            margin: 30px auto;
            max-width: 1200px;
            flex-wrap: wrap;
            padding: 0 20px;
        }
        
        .stat-card {
            background: var(--section-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            flex: 1;
            min-width: 200px;
            margin: 0 10px 20px 10px;
            text-align: center;
        }
        
        .stat-card .stat-number {
            font-size: 36px;
            font-weight: bold;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 10px 0;
        }
        
        .stat-card .stat-label {
            font-size: 16px;
            color: var(--text-secondary);
        }
        
        footer {
            background: #003366;
            text-align: center;
            color: white;
            padding: 20px;
            margin-top: 20px;
        }
        
        footer a {
            color: white;
            text-decoration: none;
            padding: 8px 16px;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            transition: all 0.3s ease;
            display: inline-block;
        }
        
        footer a:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        
        /* Responsive design */
        @media (max-width: 768px) {
            .feature-grid {
                grid-template-columns: 1fr;
            }
            
            .stats-section {
                flex-direction: column;
            }
            
            .stat-card {
                margin: 0 0 20px 0;
            }
            
            .hero-section {
                padding: 30px 20px;
            }
            
            .hero-section p {
                max-width: 100%;
            }

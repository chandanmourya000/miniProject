<!-- views/reset-password.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password - Accommodation Portal</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(to right, #990000, #0073e6);
      --section-bg: #ffffff;
      --text-primary: #333;
      --text-secondary: #555;
      --border-radius: 10px;
      --box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      --accent-color: #0073e6;
      --secondary-accent: #990000;
      --success-color: #28a745;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f5f7fa;
      color: var(--text-primary);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    /* Header */
    header {
      background: linear-gradient(to right, #990000, #0073e6);
      color: white;
      padding: 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    #acc1st {
      display: flex;
      align-items: center;
    }
    
    #logoimg img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      margin-right: 15px;
      border: 2px solid white;
    }
    
    #accLetter {
      font-size: 26px;
      font-weight: bold;
    }
    
    .home-link {
      padding: 10px 20px;
      background-color: rgba(255, 255, 255, 0.2);
      border-radius: 5px;
      color: white;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .home-link:hover {
      background-color: rgba(255, 255, 255, 0.3);
      transform: translateY(-2px);
    }
    
    /* Reset Password Container */
    .page-container {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 20px;
    }
    
    .reset-password-card {
      background: var(--section-bg);
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      width: 100%;
      max-width: 450px;
      padding: 40px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    .reset-password-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: var(--primary-gradient);
    }
    
    .reset-password-card h1 {
      color: var(--text-primary);
      margin-bottom: 15px;
      font-size: 28px;
      position: relative;
      display: inline-block;
    }
    
    .reset-password-card h1::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 50px;
      height: 3px;
      background: var(--primary-gradient);
      border-radius: 3px;
    }
    
    .reset-password-card p {
      color: var(--text-secondary);
      margin-bottom: 25px;
      font-size: 15px;
      line-height: 1.5;
    }
    
    .form-group {
      margin-bottom: 20px;
      text-align: left;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 8px;
      color: var(--text-primary);
      font-weight: 500;
      font-size: 14px;
    }
    
    .form-group input {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 15px;
      background-color: #f9f9f9;
      transition: all 0.3s ease;
      color: var(--text-primary);
      font-family: 'Poppins', sans-serif;
    }
    
    .form-group input:focus {
      outline: none;
      border-color: var(--accent-color);
      box-shadow: 0 0 0 2px rgba(0, 115, 230, 0.1);
      background-color: #fff;
    }
    
    .password-requirements {
      font-size: 12px;
      color: var(--text-secondary);
      margin-top: 5px;
      padding-left: 5px;
    }
    
    .reset-btn {
      width: 100%;
      padding: 12px;
      background: var(--primary-gradient);
      border: none;
      border-radius: 8px;
      color: white;
      font-size: 16px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      font-family: 'Poppins', sans-serif;
    }
    
    .reset-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 115, 230, 0.3);
    }
    
    .auth-link {
      display: inline-block;
      margin-top: 20px;
      color: var(--accent-color);
      text-decoration: none;
      font-size: 14px;
      transition: color 0.3s ease;
    }
    
    .auth-link:hover {
      color: var(--secondary-accent);
      text-decoration: underline;
    }
    
    /* Footer */
    footer {
      background: #003366;
      text-align: center;
      color: white;
      padding: 20px;
      margin-top: auto;
    }
    
    footer p {
      margin: 0;
      font-size: 14px;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      header {
        flex-direction: column;
        padding: 15px 10px;
      }
      
      #acc1st {
        margin-bottom: 15px;
      }
      
      .reset-password-card {
        padding: 30px 20px;
      }
    }
  </style>
</head>
<body>
  <header>
    <div id="acc1st"> 
      <div id="logoimg">
        <img src="/logo.jpg" alt="logo">
      </div>
      <h1 id="accLetter">Accommodation</h1>
    </div>
    <a href="/" class="home-link"><i class="fas fa-home"></i> Back to Home</a>
  </header>

  <div class="page-container">
    <div class="reset-password-card">
      <h1>Reset Password</h1>
      <p>Please enter your new password below to reset your account password.</p>
      
      <form action="/reset-password/<%= token %>" method="POST">
        <div class="form-group">
          <label for="newPassword"><i class="fas fa-lock"></i> New Password</label>
          <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" required>
          <div class="password-requirements">
            Password should be at least 8 characters and include a mix of letters, numbers, and symbols.
          </div>
        </div>
        
        <div class="form-group">
          <label for="confirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
        </div>
        
        <button type="submit" class="reset-btn">Reset Password <i class="fas fa-key"></i></button>
      </form>
      
      <a href="/login" class="auth-link"><i class="fas fa-sign-in-alt"></i> Back to Login</a>
    </div>
  </div>

  <footer>
    <p>&copy; 2023 Accommodation Portal. All rights reserved.</p>
  </footer>
</body>
</html>